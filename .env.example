APP_NAME="Invent-MAG"
APP_ENV=local
APP_KEY=
APP_DEBUG=true

# PRODUCTION SETTINGS:
# APP_ENV=production
# APP_DEBUG=false (CRITICAL: Must be false in production)
APP_TIMEZONE=UTC
APP_URL=http://localhost
APP_DOMAIN=localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# PRODUCTION LOGGING:
# LOG_CHANNEL=daily
# LOG_LEVEL=warning

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=invent_mag_be
DB_USERNAME=root
DB_PASSWORD=

SANCTUM_EXPIRATION=1440
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:4321,127.0.0.1

# PRODUCTION: Set to your actual domains
# SANCTUM_STATEFUL_DOMAINS=yourdomain.com,*.yourdomain.com

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# CRITICAL SESSION SECURITY:
# For local development (HTTP): SESSION_SECURE_COOKIE=false
# For production (HTTPS): SESSION_SECURE_COOKIE=true
SESSION_SECURE_COOKIE=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_TABLE=sessions

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"
